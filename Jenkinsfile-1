pipeline {
    agent any
    options{
        ansiColor('xterm')

    }
    stages {
        stage('Init'){
            steps {

                sh """
                ls -l
                """
            }
            input {
                message "Should be continue?"
                ok
            }

        }
        stage('plan'){
            steps{
                sh 'echo This is Test run'
            }

        }
        stage ('Deploy'){
            steps{
                sh 'echo this is deploy'
            }
        }
    }
    post {
        always{
            echo"I will always say Hello again"
        }
        success {
        echo 'I will run when pipeline is success'
        }
        failure {
            echo "i will run this pipline is failuure"
        }

    }
}